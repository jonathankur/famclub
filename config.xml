<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "au.com.famclub"
        version     = "1.0.3" >

    <!-- versionCode is optional and Android only -->

    <name>FamClub</name>

    <description>
        United in Life
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Jonathan Kur 
    </author>
<icon src="icon.png" width="64" height="64" />
<platform name="ios">
</platform>
<platform name="android">
<config-file parent="/resources" target="./res/values/strings.xml">
    <string name="fb_app_id">1561631040639833</string>
    <string name="fb_app_name">FamClub</string>
</config-file>
</platform>
<gap:plugin name="onesignal-cordova-plugin" spec="^2.4.1" source="npm" />

<!-- Requires cli-8.0.0 but we recommend using the latest version. -->
<preference name="phonegap-version" value="cli-8.0.0" />

<preference name="android-build-tool" value="gradle" />
<preference name="android-minSdkVersion" value="15" />

<!-- Can omit if not targetting Windows Phone -->
<preference name="windows-appx-target" value="8.1-phone" />
<preference name="WindowsToastCapable" value="true" />
<plugin name="cordova-plugin-camera">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Allow the app to use your camera" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Allow the app to access your photos" />
    </plugin>
    <plugin name="cordova-plugin-device" spec="1.1.4" />
<plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
<plugin name="cordova-plugin-file" spec="^4.3.3"  />
<plugin name="cordova-plugin-whitelist" spec="1.3.1" />
<plugin name="cordova-plugin-facebook4" source="npm">
 <variable name="APP_ID" value="1561631040639833" />
 <variable name="APP_NAME" value="FamClub" />

</plugin>
  <plugin name="cordova-android-support-gradle-release" source="npm">
        <variable name="ANDROID_SUPPORT_VERSION" value="26.+" />
    </plugin>

<access origin="http://code.jquery.com" subdomains="true" />
<access origin="http://famclub.com.au" subdomains="true" />
<plugin name="cordova-android-support-gradle-release" source="npm" />
<edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
    <string>add selfies to your family picture</string>
</edit-config>
</widget>